@model IEnumerable<Minesweeper_ArinPatrick.Models.Board>
<style>
        .game-button {
            width: 75px;
        }

        .game-button-image {
            width: 50px;
        }

        .button-zone {
            display: flex;
            flex-wrap: wrap;
        }

        .line-break {
            flex-basis: 100%;
            height: 0;
        }

        .button-label {
            font-size: 8px;
            text-align: center;
        }
    </style>
          
<h3>Welcome back @ViewBag.name ! </h3>
<form>
    <div>
        @for (int i = 0; i < Model.Count(); i++)
        {
            int dimension = (int)Math.Sqrt(Model.Count());
            int row = i / Model.Count();
            int col = i % Model.Count();

            // Start a new line
            if(i % dimension == 0)
            {
                <div class="line-break"></div>
            }

            <button class="game-button-image" type="submit" value="@Model.ElementAt(i)" 
                    name="buttonNum" asp-controller="Minesweeper" asp-action="HandleCellClick">
                @if (Model.ElementAt(i).IsGameOverGUI(row, col) == 50)
                {
                   <img class="game-button-image" src="~img/Bomb.jpg" />
                }
                else if(Model.ElementAt(i).IsGameOverGUI(row, col) == 0)
                {
                    <img />
                }
                else if (Model.ElementAt(i).IsGameOverGUI(row, col) == 0)
                {
                    <img />
                }
                <div class="button-label">

                </div>    
            </button>
        }
        </div>
</form>

