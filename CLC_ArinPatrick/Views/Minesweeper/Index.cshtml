
@model IEnumerable<Minesweeper_ArinPatrick.Models.Board>
<style>
        .game-button {
            width: 75px;
        }

        .game-button-image {
            width: 50px;
        }

        .button-zone {
            display: flex;
            flex-wrap: wrap;
        }

        .line-break {
            flex-basis: 100%;
            height: 0;
        }

        .button-label {
            font-size: 8px;
            text-align: center;
        }
    </style>
    @{
        //put the images in an array
        string[] imageNames = { "Bomb.jpg", "Flag.jpg" };

    }            
<h3>Welcome back @Html.DisplayFor(model => model.Username)! </h3>
<form>
    <div>
        @for (int i = 0; i < Model.Count(); i++)
        {
            int dimension = (int)Math.Sqrt(Model.Count());
           
            // Start a new line
            if(i % dimension == 0)
            {
                <div class="line-break"></div>
            }

            <button class="game-button-image" type="submit" value="@Model.ElementAt(i)." 
                    name="buttonNum" asp-controller="Button" asp-action="HandleCellClick">
                <img class="game-button" src="~/img/@imageNames[Model.ElementAt(i)]" />
                <div class="button-label">

                </div> 
                
            </button>
        }
        </div>
</form>

