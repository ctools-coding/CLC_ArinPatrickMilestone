@model IEnumerable<Minesweeper_ArinPatrick.Models.Cell>
<style>
        .game-button {
            width: 75px;
        }

        .game-button-image {
            width: 50px;
        }

        .button-zone {
            display: flex;
            flex-wrap: wrap;
        }

        .line-break {
            flex-basis: 100%;
            height: 0;
        }

        .button-label {
            font-size: 8px;
            text-align: center;
        }
    </style>
          
       static List<Cell> images = new List<Cell>();
        

<form>
    <div>
        @for (int i = 0; i < Model.Count(); i++)
        {
            int dimension = (int)Math.Sqrt(Model.Count());
            int row = i / Model.Count();
            int col = i % Model.Count();

            // Start a new line
            if(i % dimension == 0)
            {
                <div class="line-break"></div>
            }

    <button class="game-button-image" type="submit" value="@Model.ElementAt(i)"
            name="buttonNum" asp-controller="Minesweeper" asp-action="HandleCellClick">
        @if (Model.ElementAt(i).Visited == true)
        {
            if (Model.ElementAt(i).Live == false)
            {
                <p>@Model.ElementAt(i).LiveNeighbors.ToString()</p>
            }
            else if (Model.ElementAt(i).Live == true)
            {
                <img class="game-button-image" src="~/img/Bomb.jpg" />
            }
        }
        else
        {
            //<p>blank</p>
            <img class="game-button-image" src="~/img/unvisitedcell.jpg"/>

        }


        <div class="button-label">

        </div>
    </button>
        }
        </div>
</form>

